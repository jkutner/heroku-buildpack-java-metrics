#!/usr/bin/env bash

# fail fast
set -eu

# parse args
BP_DIR="$(cd "$(dirname "$0")" && pwd)"
BUILD_DIR=$1
CACHE_DIR=$2

mkdir -p $BUILD_DIR/.heroku/bin
cp $BP_DIR/bin/heroku-javaagent.jar $BUILD_DIR/.heroku/bin/heroku-javaagent.jar

mkdir -p $BUILD_DIR/.profile.d/
cat << EOF > $BUILD_DIR/.profile.d/java-metrics.#!/bin/sh
export JAVA_TOOL_OPTIONS="-javaagent:.heroku/bin/heroku-javaagent.jar \${JAVA_TOOL_OPTIONS}"
EOF
